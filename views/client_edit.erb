<form action="" method="post" accept-charset="utf-8">
  <fieldset>
	<input type="hidden" name="id" value="<%= @client.id %>"/>
    <label for="external_id" class="col-lg-2 control-label">External Id</label>
    <input type="text" name="external_id" value="<%= @client.external_id %>"/>
	<label for="name" class="col-lg-2 control-label">Name</label>
	<input type="text" name="name" value="<%= @client.name %>"/>
	<label for="email" class="col-lg-2 control-label">Email</label>
	<input type="text" name="email" value="<%= @client.email %>"/>
	<label for="address" class="col-lg-2 control-label">Address</label>
	<input type="text" name="address" value="<%= @client.address %>"/>
    <fieldset>
      <label for="active">Is this client participating in a loyalty programm?</label>
      <select name="loyalty" id="active">
        <option value="true">yes</option>
        <option value="false">no</option>
      </select>
    </fieldset>
	<label for="reference" class="col-lg-2 control-label">Reference number: <%= @client.reference %></label>
	<input type="hidden" name="reference" value="<%= @client.reference %>" />
  </fieldset>
  <input type="submit" name="Submit" value="Save" class="btn btn-success"/>
</form>