<div>
    <div class="span12">
      <h5>Add new client <span class="section_control"><a class="hide_section" href="#">hide</a> / <a class="show_section" href="#">show</a></span></h5>
      <form action="" method="post" accept-charset="utf-8" id="add_new_client">
        <fieldset>
          <label for="external_id" class="col-lg-2 control-label">External Id</label>
          <input type="text" name="external_id" value=""/>
        </fieldset>
        <fieldset>
          <label for="name" class="col-lg-2 control-label">Name</label>
          <input type="text" name="name" value=""/>
        </fieldset>
        <fieldset>
          <label for="name" class="col-lg-2 control-label">Email</label>
          <input type="text" name="email" value=""/>
        </fieldset>
        <fieldset>
          <label for="name" class="col-lg-2 control-label">Address</label>
          <input type="text" name="address" value=""/>
        </fieldset>
        <fieldset>
          <label for="active">Participating in loyalty program?</label>
          <select name="loyalty" id="active">
          <option value="true">yes</option>
          <option value="false">no</option>
          </select>
        </fieldset>
        <input type="submit" name="Submit" value="Save details" class="btn btn-success"/>
        <div class="clear">
      </form>
    </div>
    <div class="span12">
    <table class="table table-striped table-hover table-bordered tablesorter-green tablesorter" id="client_list">
    <thead>
    <tr>
        <th>Id</th>
        <th>External Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Address</th>
        <th>Reference code</th>
        <th>Loyalty program</th>
        <th>Operations</th>
    </tr>
    </thead>
    <tbody>
    <% @clients.each do |client| %>
    <tr>
        <td><%= client.id %></td>
        <td><%= client.external_id %></td>
        <td><%= client.name %></td>
        <td><%= client.email %></td>
        <td><%= client.address %></td>
        <td><%= client.reference %></td>
        <td><%= client.loyalty %></td>
        <td>
             <a href="/admin/clients/edit/<%= client.id %>" class="btn btn-success">Edit</a>
            <form action="/admin/clients/delete" method="post" accept-charset="utf-8">
                <input type="hidden" name="id" value="<%= client.id %>">
                <input type="submit" name="delete" value="Delete" class="btn btn-danger"/>
            </form>
        </td>
    </tr>
    <% end %>
    </tbody>
    </table>
    </div>
</div>
